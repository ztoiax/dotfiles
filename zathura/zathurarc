set statusbar-h-padding 0
set statusbar-v-padding 0
set page-padding 1
set selection-clipboard clipboard
set adjust-open width
set recolor-keephue
set show-scrollbars true
set highlight-transparency 0.1
# set window-title-basename true
# set database sqlite

map [normal] <F11> toggle_fullscreen
map [fullscreen] <F11> toggle_fullscreen
map D toggle_page_mode

map <C-p> jumplist forward
map <C-o> jumplist backward

map e scroll up
map u scroll up
map d scroll down
map <C-e> navigate previous
map <C-u> navigate previous
map <C-d> navigate next

map <Space> mark_evaluate
map <C-k> rotate rotate-ccw

map r rotate
map K zoom in
map J zoom out
map p print
map <A-D> recolor

map f follow

# colors
set recolor-darkcolor  "#FFFFFF"
# set recolor-lightcolor "#000000"
set recolor-lightcolor "#000000"

set completion-highlight-fg "#F0E68C"
set completion-highlight-bg "#6B8E20"

# set highlight-color "#CD850F"
# set highlight-active-color "#F0E68C"

set notification-fg "#FFFFFF"
set notification-bg "#000000"

set inputbar-bg "#FFFFFF"
set inputbar-fg "#000000"

set statusbar-bg "#FFFFFF"
set statusbar-fg "#000000"
